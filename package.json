{
  "name": "markdown-colorizer",
  "displayName": "Markdown Colorizer",
  "description": "Beautify Markdown with custom colors",
  "version": "0.0.2",
  "publisher": "woscxy",
  "repository": {
    "type": "git",
    "url": "https://github.com/woscxy/markdown-colorizer"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {},
